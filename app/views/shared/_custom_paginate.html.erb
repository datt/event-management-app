<% if pages.present? &&  pages > 1 %>
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <% pages.times do |page_num| %>
      <li class="page-item"><a class="page-link" href="events?page=<%= page_num.next %>"><%= page_num.next %></a></li>
    <% end %>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
  </ul>
<% end %>